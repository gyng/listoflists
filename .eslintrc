{
  "ecmaVersion": 5,
  "env": {
    "browser": true
  },
  "extends": "airbnb-base/legacy",
  "globals": {
    "$": true,
    "Blazy": true
  },
  "rules": {
    "func-names": 0,
    "key-spacing": 0,
    "max-len": [2, 140],
    "no-new": 0,
    "no-param-reassign": 0,
    "no-unused-vars": [2, { "argsIgnorePattern": "^_" }],
    "vars-on-top": 0,
  }
}
